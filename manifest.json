{
	"manifest_version": 3,
	"name": "Venustum",
	"version": "0.1.2",
	"description": "English learning extension - select words to get definitions and save them",
	"icons": {
		"48": "icons/icon_gray.png",
		"96": "icons/icon_gray.png"
	},
	"action": {
		"default_icon": {
			"48": "icons/icon_lightgray.png",
			"96": "icons/icon_lightgray.png"
		},
		"default_title": "Venustum",
		"default_popup": "popup/popup.html"
	},
	"background": {
		"service_worker": "venustum_background.js",
		"scripts": ["venustum_background.js"]
	},
	"content_scripts": [
		{
			"matches": ["https://*/*", "http://*/*"],
			"exclude_globs": [
				"*.js", "*.css", "*.txt", "*.json", "*.xml",
				"*.png", "*.jpg", "*.jpeg", "*.webp", "*.avif", "*.gif",
				"*.mp4", "*.webm", "*.pdf", "*.atom", "*.rss", "*.rdf"
			],
			"js": ["venustum_content.js"],
			"css": ["venustum_content.css"]
		}
	],
	"permissions": [
		"storage",
		"activeTab"
	],
	"host_permissions": [
		"https://api.dictionaryapi.dev/*"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "{a1b2c3d4-e5f6-7890-abcd-ef1234567890}",
			"strict_min_version": "121.0"
		}
	}
}
